            {
                name: "Frontend",
                url: "https://github.com/LionelOrh/Prueba-Tecnica-MCC-FrontEnd.git",
            },
        ],
        technologies: [
            {
                name: "Spring Boot",
                icon: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/spring/spring-original.svg",
            },
            {
